{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "allowJs": true,
    "checkJs": true,
    "strict": false,
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": ["ES2020", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["www/*"]
    }
  },
  "include": [
    "www/**/*.js",
    "www/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
